{
  "name": "layoutkit",
  "displayName": "LayoutKit",
  "description": "IntelliSense for LayoutKit â€” the first layout language for the web",
  "version": "0.1.0",
  "publisher": "geaglin",
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Snippets", "Other"],
  "keywords": ["layoutkit", "tailwind", "layout", "css", "dsl"],
  "activationEvents": ["onLanguage:typescriptreact", "onLanguage:javascriptreact", "onLanguage:html"],
  "main": "./dist/extension.js",
  "contributes": {
    "snippets": [
      { "language": "typescriptreact", "path": "./snippets/layoutkit.json" },
      { "language": "javascriptreact", "path": "./snippets/layoutkit.json" },
      { "language": "html", "path": "./snippets/layoutkit-html.json" }
    ]
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "package": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "typescript": "^5"
  }
}
