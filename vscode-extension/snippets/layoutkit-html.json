{
  "Center": {
    "prefix": ["Center", "lk-center"],
    "body": ["<Center${1: fill}>", "  $0", "</Center>"],
    "description": "LayoutKit Center — flex flex-col items-center justify-center"
  },
  "Stack": {
    "prefix": ["Stack", "lk-stack"],
    "body": ["<Stack${1: gap=\"${2|md,xs,sm,lg,xl,2xl|}\"}>", "  $0", "</Stack>"],
    "description": "LayoutKit Stack — flex flex-col with gap"
  },
  "Row": {
    "prefix": ["Row", "lk-row"],
    "body": ["<Row${1: gap=\"${2|md,xs,sm,lg,xl|}\"}>", "  $0", "</Row>"],
    "description": "LayoutKit Row — flex flex-row with gap"
  },
  "Box": {
    "prefix": ["Box", "lk-box"],
    "body": ["<Box${1: ${2|fill,center,padding=\"md\"|}}>", "  $0", "</Box>"],
    "description": "LayoutKit Box — generic container"
  },
  "Spread": {
    "prefix": ["Spread", "lk-spread"],
    "body": ["<Spread>", "  $1", "  $2", "</Spread>"],
    "description": "LayoutKit Spread — flex justify-between"
  },
  "Grid": {
    "prefix": ["Grid", "lk-grid"],
    "body": ["<Grid cols=\"${1:3}\"${2: gap=\"${3|md,xs,sm,lg,xl|}\"}>", "  $0", "</Grid>"],
    "description": "LayoutKit Grid — CSS grid with columns"
  },
  "Spacer": {
    "prefix": ["Spacer", "lk-spacer"],
    "body": ["<Spacer></Spacer>"],
    "description": "LayoutKit Spacer — flex-1 flexible space"
  },
  "Divider": {
    "prefix": ["Divider", "lk-divider"],
    "body": ["<Divider></Divider>"],
    "description": "LayoutKit Divider — horizontal separator"
  },
  "AspectRatio": {
    "prefix": ["AspectRatio", "lk-aspect"],
    "body": ["<AspectRatio ratio=\"${1:16/9}\">", "  $0", "</AspectRatio>"],
    "description": "LayoutKit AspectRatio — maintains width/height ratio"
  },
  "ScrollArea": {
    "prefix": ["ScrollArea", "lk-scroll"],
    "body": ["<ScrollArea${1: maxHeight=\"${2:max-h-96}\"}>", "  $0", "</ScrollArea>"],
    "description": "LayoutKit ScrollArea — scrollable container"
  },
  "Page Layout": {
    "prefix": ["lk-page", "layoutkit-page"],
    "body": [
      "<Stack fill>",
      "  <Spread padding=\"md\" class=\"border-b\">",
      "    <span>${1:Logo}</span>",
      "    <Row gap=\"sm\">",
      "      <a>${2:Home}</a>",
      "      <a>${3:About}</a>",
      "    </Row>",
      "  </Spread>",
      "  <Box fill padding=\"lg\">",
      "    <Center>",
      "      $0",
      "    </Center>",
      "  </Box>",
      "</Stack>"
    ],
    "description": "LayoutKit full page layout with nav + content"
  }
}
